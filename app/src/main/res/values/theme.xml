<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.QuranFy" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@color/White</item>
        <item name="android:textColor">@color/ThemeWhite</item>
        <item name="fontFamily">@font/senbold</item>
        <item name="android:fontFamily">@font/senbold</item>
        <item name="font">@font/senbold</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabIndicatorAnimationMode">linear</item>
        <item name="tabIndicatorAnimationDuration">@integer/material_motion_duration_medium_2</item>
        <item name="tabSelectedTextColor">@color/Green</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabIndicatorHeight">10dp</item>
        <item name="tabTextColor">#000000</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="cardBackgroundColor">@color/White</item>
        <item name="android:statusBarColor">@color/ThemeWhite</item>
    </style>

    <!-- This is for icons !-->
    <style name="Theme.QuranFy.icons">
        <item name="android:tint">@color/ThemeWhite</item>
    </style>

    <style name="Theme.QuranFy.FullScreen" parent="Theme.QuranFy">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.QuranFy.lyricFont" parent="Theme.QuranFy.FullScreen">
        <item name="fontFamily">@font/allah_01</item>
        <item name="android:fontFamily">@font/allah_01</item>
    </style>
</resources>