<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/Content_title"
        style="@style/TextAppearance.Compat.Notification.Title.Media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:text="01 - Al-Fatihah"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/Content_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="25dp"
        android:text="MECCAN - 7 VERSES"
        android:textSize="13sp" />

    <ImageButton
        android:id="@+id/playPause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/button_round"
        android:src="@drawable/play"
        app:tint="@color/ThemeWhite" />

    <ImageButton
        android:id="@+id/previous"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="130dp"
        android:background="@drawable/button_round"
        android:rotation="180"
        android:src="@drawable/next"
        app:tint="@color/ThemeWhite" />

    <ProgressBar
        android:id="@+id/seekbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:progressBackgroundTint="@color/White"
        android:progressBackgroundTintMode="add"
        android:progressDrawable="@drawable/progress_gredient"
        android:thumbOffset="5dp"
        android:thumbTint="#2A8DFA" />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_round"
        android:src="@drawable/next"
        app:tint="@color/ThemeWhite" />
</RelativeLayout>