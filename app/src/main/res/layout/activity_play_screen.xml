<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.QuranFy"
    tools:context=".Activity.playScreen">

    <ImageButton
        android:id="@+id/backPlayScreen"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="#00FFFFFF"
        android:contentDescription="Back"
        android:scaleType="centerCrop"
        android:src="@drawable/backbutton"
        android:theme="@style/Theme.QuranFy.icons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/surahName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@color/transparent"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/backPlayScreen"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/selectFavourite"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/favouriteunfilled"
        android:theme="@style/Theme.QuranFy.icons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/curve_strip"
        android:fadeScrollbars="true"
        android:padding="10dp"
        android:scrollbarFadeDuration="@integer/material_motion_duration_short_1"
        android:scrollbars="vertical"
        android:verticalScrollbarPosition="left"
        app:layout_constraintBottom_toTopOf="@+id/progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/surahName"
        tools:ignore="MissingConstraints">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fontFamily="@font/allah_01"
            android:text="@string/fatihah"
            android:textSize="21sp" />
    </ScrollView>

    <TextView
        android:id="@+id/currentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/transparent"
        android:text="00:00"
        app:layout_constraintBottom_toTopOf="@+id/PlayPauseButton"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:progressBackgroundTint="@color/White"
        android:progressDrawable="@drawable/progress_gredient"
        android:thumb="@color/transparent"
        android:thumbTint="#2F6677"
        app:layout_constraintBottom_toBottomOf="@+id/currentTime"
        app:layout_constraintEnd_toStartOf="@+id/TotalTime"
        app:layout_constraintStart_toEndOf="@+id/currentTime"
        app:layout_constraintTop_toTopOf="@+id/TotalTime" />

    <TextView
        android:id="@+id/TotalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/transparent"
        android:text="00:00"
        app:layout_constraintBottom_toTopOf="@+id/PlayPauseButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/shuffleButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="24dp"
        android:background="@drawable/button_round"
        android:contentDescription="shuffle"
        android:padding="8dp"
        android:rotation="90"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_shuffle"
        app:layout_constraintBottom_toBottomOf="@+id/PreviousTrackButton"
        app:layout_constraintEnd_toStartOf="@+id/PreviousTrackButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/PreviousTrackButton" />

    <ImageButton
        android:id="@+id/PreviousTrackButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/button_round"
        android:contentDescription="Next Track"
        android:padding="8dp"
        android:rotationY="180"
        android:scaleType="centerCrop"
        android:src="@drawable/next"
        app:layout_constraintBottom_toBottomOf="@+id/PlayPauseButton"
        app:layout_constraintEnd_toStartOf="@+id/PlayPauseButton"
        app:layout_constraintStart_toEndOf="@+id/shuffleButton"
        app:layout_constraintTop_toTopOf="@+id/PlayPauseButton" />

    <ImageButton
        android:id="@+id/PlayPauseButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_round"
        android:contentDescription="Play/Pause"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pause"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/NextTrackButton"
        app:layout_constraintStart_toEndOf="@+id/PreviousTrackButton"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/NextTrackButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/button_round"
        android:contentDescription="Next Track"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/next"
        app:layout_constraintBottom_toBottomOf="@+id/PlayPauseButton"
        app:layout_constraintEnd_toStartOf="@+id/repeatButton"
        app:layout_constraintStart_toEndOf="@+id/PlayPauseButton"
        app:layout_constraintTop_toTopOf="@+id/PlayPauseButton" />

    <ImageButton
        android:id="@+id/repeatButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="24dp"
        android:background="@drawable/button_round"
        android:contentDescription="repeat"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_repeat"
        app:layout_constraintBottom_toBottomOf="@+id/NextTrackButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/NextTrackButton"
        app:layout_constraintTop_toTopOf="@+id/NextTrackButton" />

</androidx.constraintlayout.widget.ConstraintLayout>